<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tfjybj.english.provider.dao.UserSetDao">
	<!--根据UserSet用户id模糊查询UserSetEntity-->
    <select id="queryLikeUserId" resultType="com.tfjybj.english.entity.UserSetEntity">
        SELECT
			*
        FROM
			tn_user_set f
        WHERE
			f.is_delete = 0
        <if test="userId !=''">
            <bind name="pattern" value="'%' + userId + '%'"/>
            AND f.user_id LIKE #{pattern}
        </if>
        ORDER BY
        f.create_time DESC
    </select>

    <!--根据userid查询该用户的设置信息-->
    <select id="findUserSetById" resultType="com.tfjybj.english.entity.UserSetEntity">
        SELECT
        *
        FROM
        tn_user_set
        WHERE
        user_id=#{userId}
    </select>

    <!--根据userid修改该用户的设置信息-->
    <update id="modifyById">
        UPDATE
          tn_user_set
        SET
          play_nums = #{palyNums},
          is_turn_auto = #{isTurnAuto},
          turn_delay_time = #{tuenDelayTime},
          study_number = #{studyNumber}
        WHERE
	      user_id =#{userId}
    </update>

    <select id="queryStudyNumByUserId" resultType="int">
        SELECT
            study_number
        FROM
            tn_user_set
        where
            user_id = #{userId}
    </select>
</mapper>